<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.event.categories.SelectCategories"
    android:background="@drawable/categories"
    >


    <Button
        android:id="@+id/btnDone_categories"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@drawable/rounded_button_background"
        android:text="@string/done_string"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lay_main" />

    <LinearLayout
        android:id="@+id/Lay_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_categories">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/cv_categories"
                android:layout_height="@dimen/cv_categories"
                android:src="@drawable/business" />

            <ImageView
                android:layout_width="@dimen/cv_categories"
                android:layout_height="@dimen/cv_categories"
                android:src="@drawable/concerts" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/cv_categories"
                android:layout_height="@dimen/cv_categories"
                android:src="@drawable/museum" />

            <ImageView
                android:layout_width="@dimen/cv_categories"
                android:layout_height="@dimen/cv_categories"
                android:src="@drawable/festival" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/cv_categories"
                android:layout_height="@dimen/cv_categories"
                android:src="@drawable/theater" />

            <ImageView
                android:layout_width="@dimen/cv_categories"
                android:layout_height="@dimen/cv_categories"
                android:src="@drawable/sport" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/cv_categories"
                android:layout_height="@dimen/cv_categories"
                android:src="@drawable/health" />


        </LinearLayout>


    </LinearLayout>

    <TextView

        android:id="@+id/TV_categories"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="26dp"
        android:alpha="0.8"
        android:background="@color/btnColor"
        android:text="@string/question_categories"
        android:textColor="@color/white"

        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/omit_string"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnDone_categories"
        app:layout_constraintStart_toStartOf="@+id/btnDone_categories"
        app:layout_constraintTop_toBottomOf="@+id/btnDone_categories" />


</androidx.constraintlayout.widget.ConstraintLayout>